.tab-h {
  height: 100vh;
  width: 200rpx;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #f7f7f7;
  font-size: 16px;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.tab-item {
  padding: 10rpx 0rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
  color: #bababa;
  /* border: 1px solid #e9f6ff; */
}

.tab-item.active {
  color: #3c4349;
  /* border: 2px solid #000; */
  position: relative;
  background-color: #e9f6ff;
}

.tab-item.active:before {
  content: "";
  display: block;
  height: 50rpx;
  width: 8rpx;
  background: #20a1ff;
  position: absolute;
  /* bottom: 0; */
  top: 25rpx;
  left: 5rpx;
  border-radius: 16rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  background: transparent;
}

.right_container {
  margin-left: 200rpx;
  padding: 20rpx 15rpx;
  /* border: 2px solid #000; */
  display: flex;
  flex-direction: column;
  text-align: center;
}

.head-img {
  width: 500rpx;
  margin: 0 auto;
}

.img-mask {
  position: absolute;
  width: 500rpx;
  height: 300rpx;
  background: rgba(20, 20, 20, 0.6);
  color: #fff;
  font-size: 36rpx;
  line-height: 300rpx;
  letter-spacing: 3rpx;
}

.head-img image {
  width: 100%;
  height: 300rpx;
}

.img-list {
  width: 100%;
  /* border: 1px solid #f00; */
  text-align: center;
}

.img-list-title {
  width: 200rpx;
  border-bottom: 1px solid #bababa;
  text-align: center;
  margin: 20rpx auto;
  font-size: 24rpx;
  line-height: 50rpx;
}

.img-list-items {
  width: 100%;
  display: table;
  margin-bottom: 50rpx;
}

.first-item {
  background-color: #e9f6ff;
  /* border-bottom: 3rpx solid #20a1ff; */
}
.first-item-text{
  color: #20a1ff;

}

.list-item {
  float: left;
  width: 30%;
  display: flex;
  flex-direction: column;
  margin: 5rpx 0 15rpx 2%;
  font-size: 24rpx;
  line-height: 50rpx;
}

.list-item image {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto;
}


