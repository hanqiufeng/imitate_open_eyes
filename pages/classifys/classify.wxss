.tag-container {
  width: 200%;
  height: 100rpx;
  border: 1px solid #000;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #ddd;
}

.tag-item {
  border: 1px solid #ccc;
  border-radius: 50rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin: auto;
  height: 50rpx;
  align-items: center;
}

.tag-item-text {
  /* border: 1px solid #000; */
  font-size: 24rpx;
  letter-spacing: 2rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

#slide {
  width: 100rpx;
  height: 100rpx;
  background-color: rgba(221, 221, 221, 0.5);
  right: 0;
  position: fixed;
}

#box {
  /* border: 1px solid #000; */
  width: 100%;
  overflow: hidden;
  height: 0;
  animation-fill-mode: forwards;
}

#item_list {
  background-color: white;
  width: 100%;
  display: flex;
  flex-direction: column;
}

#item_list view {
  overflow: auto;
  white-space: nowrap;
}

@keyframes slidedown {
  from {
    height: 0;
  }

  to {
    height: 90vh;
  }
}

@keyframes slideup {
  from {
    height: 90vh;
  }

  to {
    height: 0;
  }
}

.open {
  animation: slidedown 1s;
}

.close {
  animation: slideup 1s;
}

.hide {
  display: none;
}

.show {
  display: block;
}

.weui-grids {
  position: relative;
  overflow: hidden;
}

.weui-grids:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid #d9d9d9;
  color: #d9d9d9;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.weui-grids:after {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 1px;
  bottom: 0;
  border-left: 1px solid #d9d9d9;
  color: #d9d9d9;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
}

.weui-grid {
  position: relative;
  float: left;
  padding: 20px 10px;
  width: 33.33333333%;
  box-sizing: border-box;
  border-bottom: 1px solid #d9d9d9;
  border-right: 1px solid #d9d9d9;
}

.weui-grid:before {
  content: " ";
  position: absolute;
  right: 0;
  top: 0;
  width: 1px;
  bottom: 0;
  color: #d9d9d9;
  -webkit-transform-origin: 100% 0;
  transform-origin: 100% 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
}

.weui-grid:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid #d9d9d9;
  color: #d9d9d9;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.weui-grid:active {
  background-color: #ececec;
}

.weui-grid__bg {
  border-bottom: #ececec;
  position: relative;
  float: left;
  padding: 0;
  width: 100%;
  box-sizing: border-box;
}

.weui-grid__icon {
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
}

.weui-grid__icon image {
  display: block;
  width: 100%;
  height: 100%;
}

.weui-grid__icon + .weui-grid__label {
  margin-top: 5px;
}

.weui-grid__label {
  display: block;
  text-align: center;
  font-weight: bold;
  color: #000;
  font-size: 30rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
