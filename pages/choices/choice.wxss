/* pages/choices/choice.wxss */
@import "templates/swiper/swiper-template.wxss";
@import "templates/more/more-template.wxss";

.choice_container {
  display: flex;
  flex-direction: column;
}

.choice_class {
  display: flex;
  flex-direction: row;
  text-align: center;
  font-size: 30rpx;
  line-height: 50rpx;
}

.choice_class_item {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  width: 25%;
  /* height: 50rpx; */
}

.choice_class_item image {
  margin: auto;
  width: 60rpx;
  height: 60rpx;
}

.choice_hot {
  padding: auto 20rpx;
}

.choice_hot_imgs {
  /* margin: 0 auto; *//* border: 1px solid #000; */
  display: flex;
  flex-direction: row;
  width: 100%;
}

.choice_hot_imgs image {
  margin: 0 auto;
  width: 46%;
  height: 230rpx;
  border-radius: 20rpx;
}

